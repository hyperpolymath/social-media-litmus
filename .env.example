# NUJ Social Media Ethics Monitor - Environment Configuration
# Copy this file to .env and fill in your actual values

# ====================
# DATABASE
# ====================
POSTGRES_USER=nuj_admin
POSTGRES_PASSWORD=changeme_use_strong_password
POSTGRES_PORT=5432
DATABASE_URL=postgresql://nuj_admin:changeme_use_strong_password@localhost:5432/nuj_monitor

# ====================
# REDIS
# ====================
REDIS_PASSWORD=changeme_use_strong_password
REDIS_PORT=6379
REDIS_URL=redis://default:changeme_use_strong_password@localhost:6379/0

# ====================
# SERVICES
# ====================
COLLECTOR_PORT=3001
ANALYZER_PORT=3002
DASHBOARD_PORT=4000
PUBLISHER_PORT=3003

# ====================
# PLATFORM API KEYS
# ====================

# Twitter/X API v2
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Meta (Facebook/Instagram) Graph API
META_ACCESS_TOKEN=your_meta_access_token
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret

# LinkedIn API
LINKEDIN_API_KEY=your_linkedin_api_key
LINKEDIN_API_SECRET=your_linkedin_api_secret

# TikTok Business API
TIKTOK_API_KEY=your_tiktok_api_key

# YouTube Data API v3
YOUTUBE_API_KEY=your_youtube_api_key

# Bluesky AT Protocol
BLUESKY_HANDLE=your_handle.bsky.social
BLUESKY_APP_PASSWORD=your_bluesky_app_password

# ====================
# AI/NLP CONFIGURATION
# ====================
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
MIN_CONFIDENCE_THRESHOLD=0.70

# ====================
# EMAIL CONFIGURATION
# ====================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=monitor@nuj.org.uk
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=monitor@nuj.org.uk

# ====================
# SAFETY CONFIGURATION
# ====================
APPROVAL_REQUIRED=true
GRACE_PERIOD_MINUTES=5
TEST_GROUP_EMAILS=comms@nuj.org.uk
ENABLE_ROLLBACK=true

# ====================
# MONITORING CONFIGURATION
# ====================
MAX_CONCURRENT_COLLECTIONS=10
DEFAULT_CHECK_FREQUENCY=60
LOG_LEVEL=info
RUST_LOG=info

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme_use_strong_password
GRAFANA_ROOT_URL=http://localhost:3000

# Loki
LOKI_PORT=3100

# ====================
# DASHBOARD CONFIGURATION
# ====================
SECRET_KEY_BASE=changeme_generate_with_mix_phx_gen_secret
GUARDIAN_SECRET_KEY=changeme_generate_with_mix_guardian_gen_secret
PHX_HOST=localhost
ENABLE_LIVE_DASHBOARD=true
MIX_ENV=prod

# ====================
# DEVELOPMENT TOOLS
# ====================
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@nuj.org.uk
PGADMIN_PASSWORD=changeme_use_strong_password

REDIS_COMMANDER_PORT=8081

# ====================
# BACKUP CONFIGURATION
# ====================
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=nuj-monitor-backups
BACKUP_S3_REGION=eu-west-2

# ====================
# GENERAL
# ====================
NODE_ENV=production
TZ=Europe/London
